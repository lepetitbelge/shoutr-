<div class="col-3"></div>

<div class="col-6">
  <% @posts_with_comments.each do |post| %>
  <div class="post-card">
    <div class="post-details">
      <div class="post-name-and-date">
        <p><strong><%= post[:writer] %></strong> Â·
          <span class="light"><%= post[:date] %></p></span>
      </div>
      <h4 class="post-title"><%= post[:title] %></h4>
      <div class="post-image">
        <% if post[:photo] %>
          <img src=<%= post[:photo] || "/image-alternative.png" %>>
        <% end %>
      </div>
      <div class="post-content">
        <p><%= post[:content] %></p>
      </div>
      <div class="post-footer">
        <div class="rating">
          <% if post[:rating] %>
            <i class="far fa-star"></i>
            <p><%= post[:rating]%>/5</p>
          <% else %>
              <p>Be the first to rate -> action needed</p>
          <% end %>
        </div>
        <a id="comment-link" href="#">Read comments (<%= post[:comments].count %>) </a>
      </div>
    </div>
      <div class="post-comments">
        <% post[:comments].each do |comment| %>
        <p><%= comment %></p>
        <% end %>
      </div>
  </div>
  <% end %>
</div>

